{
    "title": "dbt_yml_files",
    "type": "object",
    "required": ["version"],
    "additionalProperties": false,
    "properties": {
        "version": { "type": "integer" },
        "models": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["name"],
                "properties": {
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "docs": { "$ref": "#/$defs/docs" },
                    "tests": { "$ref": "#/$defs/tests" },
                    "tags": { "$ref": "#/$defs/tags" },
                    "meta" : { "type": "object" },
                    "columns": { "$ref": "#/$defs/columns" }
                }
            }
        },
        "sources": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["name", "tables"],
                "properties": {
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "database": { "type": "string" },
                    "schema": { "type": "string" },
                    "loader": { "type": "string" },
                    "loaded_at_field": { "type": "string" },
                    "meta" : { "type": "object" },
                    "tags": { "$ref": "#/$defs/tags" },
                    "overrides": { "type": "string" },
                    "freshness": {
                        "type": "object",
                        "required": ["warn_after", "error_after"],
                        "properties": {
                            "warn_after": { "$ref": "#/$defs/freshness_warn_error" },
                            "error_after" : { "$ref": "#/$defs/freshness_warn_error" },
                            "filter": { "type": "string" }
                        }
                    },
                    "quoting": {
                        "type": "object",
                        "required": ["database", "schema", "identifier"],
                        "properties": {
                            "database": { "type": "boolean" },
                            "schema": { "type": "boolean" },
                            "identifier": { "type": "boolean" }
                        }
                    },
                    "tables": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": "name",
                            "properties": {
                                "name": { "type": "string" },
                                "description": { "type": "string" },
                                "meta" : { "type": "object" },
                                "identifier" : { "type": "string" },
                                "loaded_at_field": { "type": "string" },
                                "tests": { "$ref": "#/$defs/tests" },
                                "tags": { "$ref": "#/$defs/tags" },
                                "freshness": {
                                    "type": "object",
                                    "required": ["warn_after", "error_after"],
                                    "properties": {
                                        "warn_after": { "$ref": "#/$defs/freshness_warn_error" },
                                        "error_after" : { "$ref": "#/$defs/freshness_warn_error" },
                                        "filter": { "type": "string" }
                                    }
                                },
                                "quoting": {
                                    "type": "object",
                                    "required": ["database", "schema", "identifier"],
                                    "properties": {
                                        "database": { "type": "boolean" },
                                        "schema": { "type": "boolean" },
                                        "identifier": { "type": "boolean" }
                                    }
                                },
                                "external": { "type": "object" },
                                "columns": { "$ref": "#/$defs/columns" }
                            }
                        }
                    }
                }
            }
        },
        "seeds": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["name"],
                "properties": {
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "docs": { "$ref": "#/$defs/docs" },
                    "config": { "type": "object" },
                    "tests": { "$ref": "#/$defs/tests" },
                    "columns": { "$ref": "#/$defs/columns" }
                }
            }
        },
        "exposures": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["name", "type", "url", "maturity", "owner", "depends_on"],
                "properties": {
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "type": { "type": "string" },
                    "url": { "type": "string" },
                    "maturity": { "type": "string" },
                    "tags": { "$ref": "#/$defs/tags" },
                    "meta" : { "type": "object" },
                    "owner": {
                        "type": "object",
                        "required": ["name", "email"],
                        "properties": {
                            "name": { "type": "string" },
                            "email": { "type": "string" }
                        }
                    },
                    "depends_on": {
                        "type": "array",
                        "items": { "type": "string" },
                        "minItems": 1
                    }
                }
            }
        },
        "analyses": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["name"],
                "properties": {
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "docs": { "$ref": "#/$defs/docs" },
                    "config": {
                        "type": "object",
                        "properties": {
                            "tags": { "$ref": "#/$defs/tags" }
                        }
                    },
                    "columns": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": "name",
                            "properties": {
                                "name": { "type": "string" },
                                "description": { "type": "string" }
                            }
                        }
                    }
                }
            }
        },
        "macros": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["name"],
                "properties": {
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "docs": { "$ref": "#/$defs/docs" },
                    "arguments": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": ["name"],
                            "properties": {
                                "name": { "type": "string" },
                                "type": { "type": "string" },
                                "description": { "type": "string" }
                            }
                        }
                    }
                }
            }
        },
        "snapshots": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["name"],
                "properties": {
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "meta": { "type": "object" },
                    "docs": { "$ref": "#/$defs/docs" },
                    "config": { "type": "object" },
                    "tests": { "$ref": "#/$defs/tests" },
                    "columns": { "$ref": "#/$defs/columns" }
                }
            }
        },
        "metrics": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["name"],
                "properties": {
                    "name": { "type": "string" },
                    "label": { "type": "string" },
                    "model": { "type": "string" },
                    "description": { "type": "string" },
                    "type": { "type": "string" },
                    "sql": { "type": "string" },
                    "timestamp": { "type": "string" },
                    "time_grains": {
                        "type": "array",
                        "items": { "type": "string" }
                    },
                    "dimensions": {
                        "type": "array",
                        "items": { "type": "string" }
                    },
                    "filters": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "field": { "type": "string" },
                                "operator": { "type": "string" },
                                "value": { "type": "string" }
                            }
                        }
                    },
                    "meta": { "type": "object" }
                }
            }
        }
    },
    "$defs": {
        "docs": {
            "type": "object",
            "required":["show"],
            "properties": {
                "show": { "type": "boolean" }
            }
        },
        "tests": {
            "type": "array",
            "items": {
                "type": ["string", "object"]
            },
            "minItems": 1
        },
        "tags": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
        },
        "freshness_warn_error": {
            "type": "object",
            "properties": {
                "count": {
                    "type": "integer",
                    "minimum": 1
                },
                "period": {
                    "type": "string",
                    "enum": ["minute", "hour", "day"]
                }
            }
        },
        "columns": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": "name",
                "properties": {
                    "name": { "type": "string" },
                    "data_type": { "type": "string" },
                    "description": { "type": "string" },
                    "quote": { "type": "boolean" },
                    "tests": { "$refs": "#/$defs/tests" },
                    "tags": { "$refs": "#/$defs/tags" },
                    "meta" : { "type": "object" },
                    "config": { "type": "object" }
                }
            }
        }
    }
}
